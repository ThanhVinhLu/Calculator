<resources>

    <!-- Base application theme. -->


    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">#101010</item>
        <item name="colorPrimaryDark">#131313</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="android:Widget.Holo.Light.ListPopupWindow" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:popupMenuStyle">@style/PopupMenu</item>
        <item name="android:textAppearanceLargePopupMenu">           @style/myPopupMenuTextAppearanceLarge</item>
        <item name="android:textAppearanceSmallPopupMenu">            @style/myPopupMenuTextAppearanceSmall</item>

        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="PopupMenu" parent="@android:style/Widget.PopupMenu">
        <item name="android:popupBackground">#FF000000</item>
        <item name="android:textColor">#FF01F0</item>
        <item name="android:textSize">10sp</item>
    </style>


    <style name="myPopupMenuTextAppearanceSmall" parent="@android:style/TextAppearance.DeviceDefault.Widget.PopupMenu.Small">
        <item name="android:textColor">#FF000000</item>
        <item name="android:textSize">10sp</item>
    </style>
    <style name="myPopupMenuTextAppearanceLarge" parent="@android:style/TextAppearance.DeviceDefault.Widget.PopupMenu.Large">
        <item name="android:textColor">#FF000000</item>
        <item name="android:textSize">20sp</item>
    </style>


</resources>
